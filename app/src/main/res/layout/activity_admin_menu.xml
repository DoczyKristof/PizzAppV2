<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/lnrAdminMenu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_add_courier"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/bg"
            android:src="@drawable/addcur" />

        <ImageButton
            android:id="@+id/btn_manage_courier"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/bg"
            android:src="@drawable/mngcur" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrAdminMenu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnrAdminMenu1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_logoutAdmin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/bg"
            android:src="@drawable/logout" />

        <ImageButton
            android:id="@+id/btn_exitAdmin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/bg"
            android:src="@drawable/exitapp" />

    </LinearLayout>
</RelativeLayout>