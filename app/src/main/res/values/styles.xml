<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_bad" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#da2c43</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="btn_good" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#808000</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="btn_gold" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#D4AF37</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>
